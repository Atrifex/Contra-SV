module  playerAnimationRunning
( 	
				input Reset, frameCounter_0, moving,
				//input logic[1:0] gameState,
				
				output logic [20:0] animationOffset
);

enum logic[3:0] {player1, player2, player3, player4, player5, player6, player7, player8} playerCurr, playerNext;

logic[3:0] counter;

parameter [20:0] initialOffset = 20'd!!!!!!!!!!!!!!!!!;
parameter [9:0] playerHeight = ;
parameter [9:0] playerWidth = ;


always_ff @ (posedge frameCounter_0)
begin
	if(Reset)
		begin
			playerCurr <= player1;
			counter <= 4'b0;
		end 
	else
		begin
			playerCurr <= playerNext;
			if(counter == 4'b0011 || ~moving)
				counter <= 4'b0;
			else
				counter <= counter + 1'b1;
			
			unique case(playerCurr)
			
				player1:
				begin
					animationOffset <= initialOffset;
				end
				
				player2:
				begin
					animationOffset <= initialOffset + playerHeight*playerWidth*1;
				end
				
				player3:
				begin
					animationOffset <= initialOffset + playerHeight*playerWidth*2;
				end
				
				player4:
				begin
					animationOffset <= initialOffset + playerHeight*playerWidth*3;
				end
				
				player5:
				begin
					animationOffset <= initialOffset + playerHeight*playerWidth*4;
				end
				
				player6:
				begin
					animationOffset <= initialOffset + playerHeight*playerWidth*3;
				end
				
				player7:
				begin
					animationOffset <= initialOffset + playerHeight*playerWidth*2;
				end
				
				player8:
				begin
					animationOffset <= initialOffset + playerHeight*playerWidth*1;
				end
				default:
				begin
					animationOffset <= initialOffset;
				end
			endcase
					
		end
end



always_comb
begin
	playerNext = playerCurr;
	unique case(playerCurr)
	
	player1:
	begin
		if(counter == 4'b0011 && moving)
			playerNext = player2;
		else if(~moving)
			playerNext = player1;
	end
	
	player2:
	begin
		if(counter == 4'b0011 && moving)
			playerNext = player3;
		else if(~moving)
			playerNext = player1;
	end
	
	player3:
	begin
		if(counter == 4'b0011 && moving)
			playerNext = player4;
		else if(~moving)
			playerNext = player1;
	end
	
	player4:
	begin
		if(counter == 4'b0011 && moving)
			playerNext = player5;
		else if(~moving)
			playerNext = player1;
	end
	
	player5:
	begin
		if(counter == 4'b0011 && moving)
			playerNext = player6;
		else if(~moving)
			playerNext = player1;
	end
	
	player6:
	begin
		if(counter == 4'b0011 && moving)
			playerNext = player7;
		else if(~moving)
			playerNext = player1;
	end
	
	player7:
	begin
		if(counter == 4'b0011 && moving)
			playerNext = player8;
		else if(~moving)
			playerNext = player1;
	end
	
	player8:
	begin
		if(counter == 4'b0011 && moving)
			playerNext = player1;
		else if(~moving)
			playerNext = player1;
	end
	endcase

end

endmodule 